    class StatusDisplayWorker implements Runnable
    {
    private String msg="";
    
    public StatusDisplayWorker(String msg)
    {
        this.msg=msg;
    }
    
    public void startWork()
    {
        new Thread(this).start();
    }
    @Override
    public void run() {
            try {
                jLabel1.setText(msg);
                Thread.sleep(3000);
                jLabel1.setText("");
                msg="";
                goToNoteList();
            } catch (InterruptedException ex) {
                Logger.getLogger(NoteFrame.class.getName()).log(Level.SEVERE, null, ex);
            }
    }
    
    }
    
    public void displayNote(String text)
    {
        jTextArea1.setText(text);
    }

    /**
     * Creates new form NoteFrame
     */
    public NoteFrame() {
        this.setSize(new Dimension(NoteCreator.WIDTH,NoteCreator.HEIGHT));
        this.setTitle(NoteCreator.title);
        this.setLocation(NoteCreator.locX,NoteCreator.locY);
        initComponents();
    }
    
    public void goToNoteList()
    {
        NoteList noteList1=new NoteList();
        noteList1.setVisible(true);
        noteList1.setLocation(NoteCreator.locX, NoteCreator.locY);
        this.setVisible(false);
    }

