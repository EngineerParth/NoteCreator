    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        try {
            
            String data=jTextArea1.getText();
            if(data.equals("")||data==null);
            else
            {
                String fileName=data.substring(0, 3);
                File noteFile=new File(notecreator.NoteCreator.notesDirectory+fileName+".txt");
                if(!noteFile.exists())
                {
                    //new StatusDisplayWorker("already saved").startWork();
                    noteFile.createNewFile();    
                }
                FileOutputStream fos=new FileOutputStream(noteFile);
                PrintWriter pw=new PrintWriter(fos);
                pw.write(data);
                pw.close();
                fos.close();
                jTextArea1.setText("");
                StatusDisplayWorker worker1=new StatusDisplayWorker("Saved");
                worker1.startWork();
                
                
                
            }
        } catch (IOException ex) {
            Logger.getLogger(NoteFrame.class.getName()).log(Level.SEVERE, null, ex);
        }
                
    }//GEN-LAST:event_jButton1ActionPerformed

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        Font textFont=jTextArea1.getFont();
        if(!textFont.isBold())
        {
            jTextArea1.setFont(new Font(textFont.getName(),textFont.getStyle()+Font.BOLD,textFont.getSize()));
            isBold=true;
        }
        else
        {
            jTextArea1.setFont(new Font(textFont.getName(),textFont.getStyle()-Font.BOLD,textFont.getSize()));
            isBold=false;   
        }
    }//GEN-LAST:event_jButton2ActionPerformed

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton4ActionPerformed
        Font textFont=jTextArea1.getFont();
        jTextArea1.setFont(new Font(textFont.getName(),Font.ROMAN_BASELINE,textFont.getSize()));
    }//GEN-LAST:event_jButton4ActionPerformed

    private void jButton6ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton6ActionPerformed
        Font textFont=jTextArea1.getFont();
        int sizePrev=textFont.getSize();
        jTextArea1.setFont(new Font(textFont.getName(),textFont.getStyle(),sizePrev+2));
    }//GEN-LAST:event_jButton6ActionPerformed

    private void jButton7ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton7ActionPerformed
        Font textFont=jTextArea1.getFont();
        int sizePrev=textFont.getSize();
        jTextArea1.setFont(new Font(textFont.getName(),textFont.getStyle(),sizePrev-2));
    }//GEN-LAST:event_jButton7ActionPerformed

    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton5ActionPerformed
        if(!(jTextArea1.getText()).equals(""))
        {
            int ans=JOptionPane.showConfirmDialog(rootPane, "Are You sure to clear the text?", null,0);
            if(ans==0)
            jTextArea1.setText("");
        }
    }//GEN-LAST:event_jButton5ActionPerformed

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed
        Font textFont=jTextArea1.getFont();
        if(!textFont.isItalic())
        {
            jTextArea1.setFont(new Font(textFont.getName(),textFont.getStyle()+Font.ITALIC,textFont.getSize()));
            isItalic=true;
        }
        else
        {
            jTextArea1.setFont(new Font(textFont.getName(),textFont.getStyle()-Font.ITALIC,textFont.getSize()));
            isItalic=false;
        }
    }//GEN-LAST:event_jButton3ActionPerformed

